<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="16dp" android:height="16dp"/>
            <solid android:color="@color/chip_selected_orange"/>
        </shape>
    </item>

    <!-- Unselected state -->
    <item>
        <shape android:shape="oval">
            <size android:width="16dp" android:height="16dp"/>
            <stroke android:width="1dp" android:color="@color/chip_unselected_circle_stroke"/>
            <solid android:color="@color/chip_unselected_circle_fill"/>
        </shape>
    </item>

</selector>
