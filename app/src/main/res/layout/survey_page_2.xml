<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/survey_background_colour"
    tools:context=".ui.survey.SurveyPage2Fragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/about_you"
        android:fontFamily="@font/lexend_font"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/survey_text_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="@dimen/margin_left"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/survey_button_black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="100dp"
        android:text="@string/survey_name"
        android:fontFamily="@font/lexend_font"
        android:textSize="@dimen/text_size"
        android:textStyle="normal"
        android:textColor="@color/survey_text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="200dp"
        android:text="@string/survey_age"
        android:textSize="@dimen/text_size"
        android:textStyle="normal"
        android:textColor="@color/survey_text_black"
        android:fontFamily="@font/lexend_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_gender"
        android:textSize="@dimen/text_size"
        android:textStyle="normal"
        android:textColor="@color/survey_text_black"
        android:fontFamily="@font/lexend_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="320dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_name"

        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintWidth_max="380dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"

        app:boxStrokeColor="@color/button_stroke_colour"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/chip_bg_colour">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userInputName"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:textColor="@color/survey_text_black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_your_db"

        android:layout_marginTop="235dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintWidth_max="380dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"

        app:boxStrokeColor="@color/button_stroke_colour"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/chip_bg_colour">

        <EditText
            android:id="@+id/userInputBirthDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="date"

            android:textColor="@color/survey_text_black"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Container for Gender Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/genderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_max="380dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMale"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="@string/male_gender"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:fontFamily="@font/lexend_font"
            android:textColor="@color/survey_text_black"

            android:backgroundTint="@android:color/white"
            app:strokeColor="@color/button_stroke_colour"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonFemale"
            android:layout_marginEnd="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonFemale"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="@string/female_gender"
            android:textAllCaps="false"
            android:fontFamily="@font/lexend_font"
            android:textSize="@dimen/text_size"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/survey_text_black"

            android:backgroundTint="@android:color/white"
            app:strokeColor="@color/button_stroke_colour"
            app:strokeWidth="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonMale"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNoAnswer"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:text="@string/no_gender"
            android:textAllCaps="false"
            android:fontFamily="@font/lexend_font"
            android:textSize="@dimen/text_size"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/survey_text_black"

            android:backgroundTint="@android:color/white"
            app:strokeColor="@color/button_stroke_colour"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/buttonMale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

