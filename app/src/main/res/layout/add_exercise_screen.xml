<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/home_page_background_colour">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/addExerciseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/add_exercise_title"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/lexend_font"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black_colour"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/exerciseMediaView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"

            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:minHeight="200dp"
            android:scaleType="center"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/add_exercise_media_container_bg_colour"

            app:strokeColor="@color/black_colour"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/RoundedCorners"

            app:layout_constraintTop_toBottomOf="@id/addExerciseTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_add_photo" />


        <TextView
            android:id="@+id/exerciseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"

            android:text="@string/exercise_title"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lexend_font"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black_colour"

            app:layout_constraintTop_toBottomOf="@id/exerciseMediaView"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@id/exerciseTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exerciseNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/exercise_title"
                android:fontFamily="@font/lexend_font" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/exerciseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"

            android:text="@string/exercise_description"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lexend_font"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black_colour"

            app:layout_constraintTop_toBottomOf="@id/textInputLayoutTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutDescription"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintTop_toBottomOf="@id/exerciseDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exerciseDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/exercise_description"
                android:fontFamily="@font/lexend_font" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/exerciseSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"

            android:text="@string/exercise_steps"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lexend_font"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black_colour"

            app:layout_constraintTop_toBottomOf="@id/textInputLayoutDescription"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/stepsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/exerciseSteps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/addStepButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/add_exercise_steps"
            android:textAllCaps="false"
            android:textColor="@color/add_exercise_step_text_colour"
            android:textStyle="bold"

            app:icon="@drawable/ic_add_circle"
            app:iconTint="@color/dumbbell_colour"

            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/stepsContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/exerciseNotesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"

            android:text="@string/exercise_notes"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lexend_font"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black_colour"

            app:layout_constraintTop_toBottomOf="@id/addStepButton"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNotes"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@string/exercise_notes_description"

            app:layout_constraintTop_toBottomOf="@id/exerciseNotesText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/exerciseNotesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/exercise_notes_description"
                android:fontFamily="@font/lexend_font" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/exerciseCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"

            android:text="@string/exercise_category"
            android:fontFamily="@font/lexend_font"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black_colour"

            app:layout_constraintTop_toBottomOf="@id/textInputLayoutNotes"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/categoryContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"

            app:layout_constraintTop_toBottomOf="@id/exerciseCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLegs"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"

                android:text="@string/category_legs"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textStyle="normal"
                android:fontFamily="@font/lexend_font"
                android:textColor="@color/survey_text_black"

                app:cornerRadius="8dp"
                android:backgroundTint="@color/exercise_category_bg_colour"
                app:strokeColor="@color/exercise_category_stroke_colour"
                app:strokeWidth="1dp"
                android:checkable="true"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonArms"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonArms"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"

                android:text="@string/category_arms"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textStyle="normal"
                android:fontFamily="@font/lexend_font"
                android:textColor="@color/survey_text_black"

                app:cornerRadius="8dp"
                android:backgroundTint="@color/exercise_category_bg_colour"
                app:strokeColor="@color/exercise_category_stroke_colour"
                app:strokeWidth="1dp"
                android:checkable="true"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/buttonLegs"
                app:layout_constraintEnd_toStartOf="@+id/buttonChest"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonChest"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"

                android:text="@string/category_chest"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textStyle="normal"
                android:fontFamily="@font/lexend_font"
                android:textColor="@color/survey_text_black"

                app:cornerRadius="8dp"
                android:backgroundTint="@color/exercise_category_bg_colour"
                app:strokeColor="@color/exercise_category_stroke_colour"
                app:strokeWidth="1dp"
                android:checkable="true"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/buttonArms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonShoulders"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:paddingHorizontal="2dp"

                android:text="@string/category_Shoulders"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textStyle="normal"
                android:fontFamily="@font/lexend_font"
                android:textColor="@color/survey_text_black"

                app:cornerRadius="8dp"
                android:backgroundTint="@color/exercise_category_bg_colour"
                app:strokeColor="@color/exercise_category_stroke_colour"
                app:strokeWidth="1dp"
                android:checkable="true"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonBack"
                app:layout_constraintTop_toBottomOf="@id/buttonLegs"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBack"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"

                android:text="@string/category_back"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textStyle="normal"
                android:fontFamily="@font/lexend_font"
                android:textColor="@color/survey_text_black"

                app:cornerRadius="8dp"
                android:backgroundTint="@color/exercise_category_bg_colour"
                app:strokeColor="@color/exercise_category_stroke_colour"
                app:strokeWidth="1dp"
                android:checkable="true"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/buttonShoulders"
                app:layout_constraintEnd_toStartOf="@+id/buttonCore"
                app:layout_constraintTop_toBottomOf="@id/buttonArms"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCore"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"

                android:text="@string/category_core"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textStyle="normal"
                android:fontFamily="@font/lexend_font"
                android:textColor="@color/survey_text_black"

                app:cornerRadius="8dp"
                android:backgroundTint="@color/exercise_category_bg_colour"
                app:strokeColor="@color/exercise_category_stroke_colour"
                app:strokeWidth="1dp"
                android:checkable="true"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/buttonBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonChest"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveExerciseButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="32dp"
            android:layout_marginTop="12dp"

            android:text="@string/save_exercise"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/lexend_font"
            app:cornerRadius="13dp"
            app:backgroundTint="@color/exercise_save_button_background_colour"
            android:textColor="@color/exercise_save_text_colour"

            app:layout_constraintTop_toBottomOf="@id/categoryContainer"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/cancel_exercise"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/lexend_font"
            app:cornerRadius="13dp"
            app:backgroundTint="@color/exercise_cancel_button_background_colour"
            android:textColor="@color/exercise_cancel_text_colour"

            app:layout_constraintTop_toBottomOf="@id/saveExerciseButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
